generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(cuid())
  email      String?     @unique
  name       String?
  image      String?
  notes      Note[]
  highlights Highlight[]
}

model Note {
  id        String   @id @default(cuid())
  userId    String
  bookId    String
  chapter   Int
  verse     Int?
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId, bookId, chapter])
}

model Highlight {
  id        String   @id @default(cuid())
  userId    String
  bookId    String
  chapter   Int
  verse     Int
  color     String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, bookId, chapter, verse])
}
