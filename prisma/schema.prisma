// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // optional but nice for prisma migrate
}

generator client {
  provider      = "prisma-client-js"
  engineType    = "binary"                   // recommended on Netlify
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}



model Note {
  id        String   @id @default(cuid())
  userId    String
  bookId    String
  chapter   Int
  verse     Int?
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
