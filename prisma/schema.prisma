// prisma/schema.prisma
datasource db {
  provider = "sqlite"         // keep sqlite for now; switch later if you want
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Note {
  id        String   @id @default(cuid())
  userId    String
  bookId    String
  chapter   Int
  verse     Int?
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
